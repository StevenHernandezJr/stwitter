<!DOCTYPE html>
<html>
  <head>
    <title>Stwitter</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <nav class="navbar is-info">
      <div class="navbar-brand">
        <a class="navbar-item">Stwitter</a>

        <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false">
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
        </a>
      </div>
      <div class="navbar-menu">
        <div class="navbar-start">
          <%= link_to "Home", root_path, class: "navbar-item" %>
          <% if user_signed_in? then %>
            <%= link_to "New Stweet", new_stweet_path, class: "navbar-item" %>
          <% end %>
        </div>
      </div>
      <div class="navbar-end">
        <div class="navbar-item">
          <div class="buttons">
            <% if user_signed_in? then %>
              <%= link_to edit_user_registration_path, class: "button is-info" do %>
                <strong><%= current_user.name %></strong>
              <% end %>
              <%= link_to destroy_user_session_path, method: :delete, class: "button is-light is-danger" do %>
                <strong>Log Out</strong>
              <% end %>
            <% else %>
              <%= link_to new_user_session_path, class: "button is-info" do %>
                <strong>Log In</strong>
              <% end %>
              <%= link_to new_user_registration_path, class: "button is-light is-info" do %>
                <strong>Sign Up</strong>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </nav>
    
    <%= yield %>
  </body>
</html>
