<div class="column is-half">
  <% @stweets.each do |stweet| %>
    <div class="box">
      <article class="media">
        <figure class="media-left">
          <p class="image is-64x64">
            <img class="is-rounded" src="https://bulma.io/images/placeholders/128x128.png">
          </p>
        </figure>
        <div class="media-content">
          <div class="content">
            <p>
              <%= link_to stweet do %>
                <strong><%= stweet.user.name %> </strong>
              <% end %>
              <small>@<%= stweet.user.username %> 31m</small><br>
              <%= stweet.stweet %>
            </p>
          </div>
          <% if user_signed_in? %>
            <nav class="level is-mobile">
              <div class="level-left">
                <%= link_to "Edit", edit_stweet_path(stweet), class: "level-item" %>
                <%= link_to "Delete", stweet, method: :delete, class: "level-item", data: {confirm: "Are you sure you want to delete this stweet?"} %>
              </div>
            </nav>
          <% end %>
        </div>
      </article>
    </div>
  <% end %>
</div>